<UserControl x:Class="WVA_Connect_CSI.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WVA_Connect_CSI.Views"
             mc:Ignorable="d" 
             MinHeight="350"
             MinWidth="650"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF327EC3" Offset="1"/>
                <GradientStop Color="White" Offset="0.08"/>
                <GradientStop Color="#FF98BEE1" Offset="0.81"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Stretch"
              Height="30"
              VerticalAlignment="Top"
              Margin="20,20,20,0"
              Grid.Row="0">

            <ComboBox Name="SearchOrdersComboBox"
                      Width="130"
                      Height="30"
                      Margin="0,0,0,0"
                      FontSize="16"
                      SelectedIndex="0"
                      HorizontalAlignment="Left">

                <ComboBoxItem>Order ID</ComboBoxItem>
                <ComboBoxItem>Order Name</ComboBoxItem>
                <ComboBoxItem>Created Date</ComboBoxItem>
                <ComboBoxItem>ShipToPatient</ComboBoxItem>
                <ComboBoxItem>PoNumber</ComboBoxItem>
                <ComboBoxItem>Ordered By</ComboBoxItem>
            </ComboBox>

            <TextBox Name="SearchOrdersTextBox"
                     Margin="150,0,160,0"
                     Height="30"
                     HorizontalAlignment="Stretch"
                     FontSize="19"
                     TextChanged="SearchOrdersTextBox_TextChanged"/>

            <ComboBox Name="OrderTypeComboBox"
                      Width="140"
                      Height="30"
                      Margin="0,0,0,0"
                      FontSize="16"
                      SelectedIndex="1"
                      HorizontalAlignment="Right"
                      SelectionChanged="OrderTypeComboBox_SelectionChanged">

                <ComboBoxItem>All Orders</ComboBoxItem>
                <ComboBoxItem>Submitted</ComboBoxItem>
                <ComboBoxItem>Open</ComboBoxItem>
            </ComboBox>


        </Grid>

        <Grid Grid.Row="1"
              Margin="0,0,0,0">
            
            <DataGrid Name="WvaOrdersDataGrid"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      FontWeight="DemiBold"
                      Background="Transparent"
                      BorderThickness="1"
                      ItemsSource="{Binding Order}"
                      IsReadOnly="True"
                      Margin="20,20,20,0"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      CanUserReorderColumns="False"
                      CanUserSortColumns="False" 
                      HeadersVisibility="Column" 
                      MouseDoubleClick="WvaOrdersDataGrid_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=WvaStoreID}"     Width="95" MinWidth="80" Header="WVA Store ID" />
                    <DataGridTextColumn Binding="{Binding Path=OrderName}"      Width="*" MinWidth="80" Header="Order Name" />
                    <DataGridTextColumn Binding="{Binding Path=CreatedDate}"    Width="95" MinWidth="80" Header="Created Date" />
                    <DataGridTextColumn Binding="{Binding Path=ShipToPatient}"  Width="95" MinWidth="80" Header="STP" />
                    <DataGridTextColumn Binding="{Binding Path=PoNumber}"       Width="95" MinWidth="80" Header="PO Number" />
                    <DataGridTextColumn Binding="{Binding Path=OrderedBy}"      Width="95" MinWidth="80" Header="Ordered By" />
                    <DataGridTextColumn Binding="{Binding Path=Quantity}"       Width="95" MinWidth="80" Header="Qty" />
                    <DataGridTextColumn Binding="{Binding Path=Status}"         Width="95" MinWidth="80" Header="Status" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</UserControl>
