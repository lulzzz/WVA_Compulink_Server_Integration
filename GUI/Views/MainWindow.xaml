<Window x:Class="WVA_Connect_CSI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WVA_Connect_CSI.Views"
        xmlns:viewmodels="clr-namespace:WVA_Connect_CSI.ViewModels"
        mc:Ignorable="d"
        Title="WVA Connect CSI" 
        Height="400"
        Width="455"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        ResizeMode="CanMinimize" 
        Icon="/Resources/logo_plain_vector_72_P0X_icon.ico">

    <Window.Resources>
        
            <DataTemplate x:Name="mainViewTemplate" DataType="{x:Type viewmodels:MainViewModel}">
                <views:MainView DataContext="{Binding ElementName=mainViewTemplate}"/>
            </DataTemplate>

            <DataTemplate x:Name="loginViewTemplate" DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView DataContext="{Binding ElementName=loginViewTemplate}"/>
            </DataTemplate>
       
    </Window.Resources>
    
    <ContentControl Name="MainContentControl"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-4,0,0,0"
                    Content="{Binding}"/>
</Window>
